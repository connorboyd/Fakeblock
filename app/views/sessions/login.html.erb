<% @page_title = "Fakeblock | Login" -%>


<div class = "Sign_Form">
	<h1>Log in</h1>
	<%= form_tag(:action => 'login_attempt') do %>
		<p>Email: </br> <%= text_field_tag(:email) %></p>
		<p>Password:</br> <%= password_field_tag :login_password %></p>
		<%= submit_tag("Log In") %>
	<% end %>

	<% if flash[:alert] %>
	    <div class="alert"><%= flash[:alert] %></div>
    <% end %>

    <% if flash[:notice] %>
	    <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <br>
    <a href="/create_account">Create a Fakeblock account</a>

</div>